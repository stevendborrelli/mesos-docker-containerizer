#!/usr/bin/env bash

#        ___     _          __        _
#       / / |__ (_)_ __    / /__  ___| |_ _   _ _ __
#      / /| '_ \| | '_ \  / / __|/ _ \ __| | | | '_ \
#   _ / / | |_) | | | | |/ /\__ \  __/ |_| |_| | |_) |
#  (_)_/  |_.__/|_|_| |_/_/ |___/\___|\__|\__,_| .__/
#                                              |_|

# At this point we're in the root of the project.

set -e 
CONFIG_FILE=/etc/default/containerizer

[ -f "${CONFIG_FILE}" ] && source ${CONFIG_FILE}

function check_deps() {
    missing=
    while [ $1 ]; do
      if [ ! $(which $1) ]; then
        echo "Could not find $1."
        missing=1
      fi
      shift
    done
    if [ $missing ]; then
      echo "Not all dependencies found on PATH. Aborting."
      exit 1
    fi
}

check_deps python2.7 virtualenv

export PYTHONPATH=

# Install the requirements
if [ ! -f "${CONTAINERIZER_VENV_PATH}/updated" -o ${CONTAINERIZER_HOME}/requirements.pip -nt ${CONTAINERIZER_VENV_PATH}/updated ]; then
  virtualenv ./env -p python2.7
  ${CONTAINERIZER_VENV_PATH}/bin/pip install -U distribute==0.6.46
  ${CONTAINERIZER_VENV_PATH}/bin/pip install -r ${CONTAINERIZER_HOME}/requirements.pip
  if [ $? -ne 0 ]; then
    echo "There was a problem installing requirements. Aborting."
    exit 1
  fi

  echo Base requirements installed.
  touch ${CONTAINERIZER_VENV_PATH}/updated
fi
